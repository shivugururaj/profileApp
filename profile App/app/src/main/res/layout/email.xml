<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="match_parent"
	android:weightSum="100" android:layout_height="match_parent">
	<ScrollView android:layout_weight="20" android:layout_width="fill_parent"
		android:layout_height="fill_parent">

		<LinearLayout android:orientation="vertical"
			android:layout_width="match_parent" android:layout_height="match_parent">

			<TextView
			    android:id="@+id/textView1"
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:gravity="center"
			    android:text="EMAIL"
			    android:textAppearance="?android:attr/textAppearanceLarge" />

			<TextView android:text="Email address(es):"
				android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
			<EditText android:layout_height="wrap_content"
				android:layout_width="match_parent" android:id="@+id/etEmails">
			</EditText>
			<TextView android:text="Subject"
				android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
			<EditText android:layout_height="wrap_content"
				android:layout_width="match_parent" android:id="@+id/etSubject"></EditText>
			<TextView android:text="Body"
				android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
			<EditText android:layout_height="100dp"
				android:layout_width="match_parent" android:id="@+id/etBody"></EditText>
			
		</LinearLayout>
	</ScrollView>
	<LinearLayout android:orientation="vertical"
		android:layout_width="match_parent" android:layout_weight="80"
		android:layout_height="fill_parent">

		<Button
		    android:id="@+id/bSentEmail"
		    android:layout_width="fill_parent"
		    android:layout_height="80dp"
		    android:text="Send Email" >
</Button>
	</LinearLayout>
	
</LinearLayout>